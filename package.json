{
  "name": "@egis/semantic-dependents-updates-github",
  "version": "0.0.0-semantic-release",
  "description": "Creates Github Pull Requests to update current package version in dependent projects.",
  "main": "dist/bin/main.js",
  "files": [
    "dist",
    "src"
  ],
  "bin": {
    "semantic-dependents-updates-github": "dist/bin/main.js"
  },
  "scripts": {
    "test": "gulp",
    "lint": "gulp lint",
    "watch": "gulp watch",
    "build": "gulp build",
    "coverage": "gulp coverage",
    "update-dependents": "dist/bin/main.js",
    "semantic-release": "semantic-release pre && npm publish --access public && npm run update-dependents && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/artemv/semantic-dependents-updates-github.git"
  },
  "keywords": [
    "npm",
    "github",
    "dependencies",
    "versions",
    "pull-requests"
  ],
  "author": "Artem Vasiliev <artem.job@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/artemv/semantic-dependents-updates-github/issues"
  },
  "homepage": "https://github.com/artemv/semantic-dependents-updates-github",
  "devDependencies": {
    "@bahmutov/parse-github-repo-url": "^0.1.1",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^6.2.0",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.3.13",
    "chai": "^3.4.1",
    "del": "^2.2.0",
    "github": "^0.2.4",
    "glob": "^7.0.3",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.1",
    "gulp-eslint": "^2.0.0",
    "gulp-filter": "^4.0.0",
    "gulp-insert": "^0.5.0",
    "gulp-istanbul": "^0.10.3",
    "gulp-jscs": "^3.0.0",
    "gulp-livereload": "^3.8.1",
    "gulp-load-plugins": "^1.1.0",
    "gulp-mocha": "^2.2.0",
    "gulp-plumber": "^1.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.5.1",
    "gulp-util": "^3.0.7",
    "isparta": "^4.0.0",
    "json-loader": "^0.5.3",
    "mocha": "^2.3.4",
    "semantic-release": "^4.3.5",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "vinyl-source-stream": "^1.1.0"
  },
  "engines": {
    "node": ">=0.10",
    "npm": ">=2"
  },
  "semantic-dependents-updates": {
    "author": {
      "email": "semadep@egis-software.com"
    },
    "dependents": {
      "@egis/build-tools": {
        "repo": "git@github.com:artemv/egis-build-tools.git",
        "branchNameBase": "semadep-updater"
      }
    }
  }
}
